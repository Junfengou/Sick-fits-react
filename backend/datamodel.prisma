# [@unique] is directive

# enum is a list of possible options of preset list for a type
enum Permission {
	ADMIN
	USER
	ITEMCREATE
	ITEMUPDATE
	ITEMDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @id
	name: String!
	email: String! @unique
	password: String!
	resetToken: String
	resetTokenExpiry: Float
	permissions: [Permission] @scalarList(strategy: RELATION)
	cart: [CartItem!]!
}

# [String!] means it's required

type Item {
	id: ID! @id
	title: String!
	description: String!
	image: String
	largeImage: String
	price: Int!
	createAt: DateTime
	updateAt: DateTime! @createdAt
	user: User!
}

type CartItem {
	id: ID! @id
	quantity: Int! @default(value: 1)
	item: Item #relationship
	user: User! #relationship
}
